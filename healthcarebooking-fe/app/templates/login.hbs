<section class="page">
    <div class="panel panel--medium m-auto">
        <div class="page__header">Login</div>
        <form {{action "authenticate" identification password on="submit" }}>
            <div class="form-group">
                <label for="identification">Username</label>
                {{input id="identification" placeholder="Enter Login" value=identification required=true}}
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                {{input id="password" placeholder="Enter Password" type="password" value=password required=true }}
            </div>
            <p>
                Don't have an account? {{#link-to "register"}}Register{{/link-to}} here!
            </p>
            <button type="submit" id="btnLogin">Login</button>
        </form>
    </div>
</section>
